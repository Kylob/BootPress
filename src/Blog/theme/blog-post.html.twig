<div itemscope itemtype="http://schema.org/Article">

    <div class="page-header"><h1 itemprop="name">{{ post.title }}</h1></div><br>
    
    <div itemprop="articleBody" style="padding-bottom:40px;">{{ post.content }}</div>
    
    {% for tag in post.tags %}
        {% if loop.first %} <p>Tagged: {% endif %}
        &nbsp;<a href="{{ tag.url }}" itemprop="keywords">{{ tag.name }}</a>
        {% if loop.last %} </p> {% endif %}
    {% endfor %}
    
    <p>
        Published: <a href="{{ post.archive }}" itemprop="datePublished">{{ post.published|date('F j, Y') }}</a>
        {% if post.author %} by <a href="{{ post.author.url }}" itemprop="author">{{ post.author.name }}</a> {% endif %}
    </p>
    
</div>

{{ pagination.pager(post.previous, post.next) }}
